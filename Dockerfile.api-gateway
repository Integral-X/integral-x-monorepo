FROM node:20-alpine

# Install curl for health checks
RUN apk add --no-cache curl

WORKDIR /

COPY . .

RUN yarn install --frozen-lockfile --production=false

# Build using NestJS CLI directly
WORKDIR /apps/api-gateway
RUN npx nest build

WORKDIR /

EXPOSE 4000

HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 CMD curl -f http://localhost:4000/health || exit 1

CMD ["node", "apps/api-gateway/dist/apps/api-gateway/src/main.js"]