{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@integral-x/auth": ["../../libs/auth/src/index.ts"],
      "@integral-x/common": ["../../libs/common/src/index.ts"],
      "@integral-x/messaging": ["../../libs/messaging/src/index.ts"],
      "@integral-x/observability": ["../../libs/observability/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
